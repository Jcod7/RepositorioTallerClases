<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_gravity="center"
                android:contentDescription="@string/imagen_perfil"
                android:layout_marginBottom="16dp"
                android:background="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/formulario"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingrese_su_Info"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Tabla con filas y columnas -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginBottom="16dp">

        <TableRow>
            <TextView
                android:text="@string/nombre"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp" />

            <TextView
                android:text="@string/nombre_apellido"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/edad"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp" />

            <TextView
                android:text="@string/años"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/email"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp" />

            <TextView
                android:text="@string/email_direccion"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/direccion"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp" />

            <TextView
                android:text="@string/dir"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp" />
        </TableRow>

    </TableLayout>

    <!-- Campo de entrada con datos de ejemplo -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#1565C0"
        android:text="@string/registrar"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/inputField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/nombres"
        android:text="@string/nombapelli"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        tools:ignore="Autofill,InefficientWeight,TextFields" />

    <!-- Botón de registro con un contraste adecuado -->

    <!-- Botón de regreso con un contraste adecuado -->

    <Button
        android:id="@+id/backButton"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#D32F2F"
        android:text="@string/regresarbt"
        android:textColor="@android:color/white" />
</LinearLayout>
